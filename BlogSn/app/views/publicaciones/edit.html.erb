<h1>Editar un Post</h1>
<% @imgName = @postEdit.imagen %>
<%= form_for :postEdit, :url=>publicacione_path , method: :patch, class: 'form-horizontal' do |p| %>
    
    <div class=' row form-group'>
        <%begin %>
            <%= image_tag @imgName, :size => '100x100' , class:'img-thumbnail col-sm-6'  %>
        <%rescue %>
            <p>No hay imagens</p>
        <%end %>
        
    </div>

    <div class='form-group'>
        <%= p.label 'Titulo del Post' , class:'control-label'%>
        <%= p.text_field :titulo , class:'form-control'  %>
    </div>

    <div class='form-group'>
        <%= p.label 'Titulo del Post' , class:'control-label' %>
        <%= p.text_field :titulo, class:'form-control'%>
    </div>

    <div class='form-group'>
        <%= p.label 'Autor del Post', class:'control-label' %>
        <%= p.text_field :autor, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= p.label 'Cuerpo del Post', class:'control-label'  %>
        <%= p.text_area :cuerpo, class:'form-control', :rows=>5 %>
    </div>

    <div class='form-group'>
        <%= p.label 'Fecha del Post', class:'control-label' %>
        <%= p.date_field :fecha, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= p.submit 'Guardar', class:'btn btn-lg btn-warning'  %>
    </div>

<%end %>